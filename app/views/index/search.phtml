            echo '<a href = "/blab/index/profile/' . $arrUser->getUsername () . '"><img title="' . $arrUser->getFirstName () . ' ' . $arrUser->getLastName () . '" src="/blab/public/uploads/profile/' . $arrUser->getUsername () . '.jpg"></a>';
