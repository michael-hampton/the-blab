        echo '<div class="vpb_popup_fb_box_c vpb_hover" title="' . $arrUser->getFirstName () . ' ' . $arrUser->getLastName () . '"><a href = "/blab/index/profile/' . $arrUser->getUsername () . '">' . $arrUser->getFirstName () . ' ' . $arrUser->getLastName () . '</a></div>
